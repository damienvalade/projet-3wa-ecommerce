{% extends 'base.html.twig' %}

{% block title %}Fiche {{ vendor.lastname }} {{ vendor.firstname }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-4">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="{{ vendor.profilePicture }}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{ vendor.lastname }} {{ vendor.firstname }}</h5>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of
                            the card's content.</p>
                        <div class="d-flex align-items-center">
                            <div class="col text-center">
                                <img class="rounded-circle img-fluid" style="height: 70px; width: 70px"
                                     src="{{ vendor.company.profilePicture }}">
                            </div>
                            <div class="col">
                                <h5>{{ vendor.company.name }}</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-8">
                <div class="container">
                    <div class="row">
                        <p>{{ vendor.company.description }}</p>
                    </div>
                    <div class="row">
                        {% for article in vendor.articles %}
                            <div class="col-4">
                                <div class="card">
                                    <img class="card-img-top" src="{{ article.photo }}" alt="image cap"/>

                                    <div class="card-body">
                                        <h5 class="card-title">{{ article.name }}</h5>

                                        <p class="card-text"> {{ article.description }}
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item">
                                                <div class="row">
                                                    <p class="col"> {{ article.origin }} </p>
                                                    <p class="col"> {{ article.price }}â‚¬</p>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
